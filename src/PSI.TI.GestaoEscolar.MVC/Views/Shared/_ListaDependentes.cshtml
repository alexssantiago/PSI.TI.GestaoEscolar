@using PSI.TI.GestaoEscolar.MVC.Extensions
@model IEnumerable<PSI.TI.GestaoEscolar.Application.ViewModels.AlunoViewModel>

@{
    Layout = null;
    ViewData["Title"] = "Dependentes";
}

<h2 style="padding-top: 2%">@ViewData["Title"]</h2>
<hr />

<vc:Summary></vc:Summary>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @this.FormatarCpf(item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-controller="Dependentes" asp-action="Atualizar" asp-route-id="@item.Id" data-modal=""><spam class="fa fa-pencil-alt"></spam></a>
            </td>
        </tr>
    }
</table>