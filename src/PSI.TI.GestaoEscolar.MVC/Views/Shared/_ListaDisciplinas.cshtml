                        <a class="btn btn-info" asp-action="Detalhes" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                        <a class="btn btn-warning" asp-action="Atualizar" asp-route-id="@item.Id" data-modal=""><spam class="fa fa-pencil-alt"></spam></a>
                    </td>*@
