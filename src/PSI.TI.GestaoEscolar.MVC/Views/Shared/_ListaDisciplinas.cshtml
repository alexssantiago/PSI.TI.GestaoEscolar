@model IEnumerable<PSI.TI.GestaoEscolar.Application.ViewModels.DisciplinaViewModel>

@{
    Layout = null;
    ViewData["Title"] = "Disciplinas";
}

<h2 style="padding-top: 2%">@ViewData["Title"]</h2>
<hr />

<vc:Summary></vc:Summary>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargaHoraria)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
